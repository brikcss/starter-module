{
	"name": "@brikcss/starter-module",
	"version": "0.0.1",
	"description": "Starter repo for building node, CLI, JS, or browser modules.",
	"author": "Brikcss <https://github.com/brikcss>",
	"contributors": [
		"The Zimmee <thezimmee@gmail.com>"
	],
	"homepage": "https://github.com/brikcss/starter-module",
	"repository": {
		"type": "git",
		"url": "https://github.com/brikcss/starter-module.git"
	},
	"bugs": {
		"url": "https://github.com/brikcss/starter-module/issues"
	},
	"keywords": [
		"brikcss"
	],
	"bin": {},
	"main": "./dist/lib/lib.min.js",
	"module": "./dist/module/lib.min.js",
	"browser": "./dist/browser/lib.min.js",
	"umd": "./dist/umd/lib.min.js",
	"directories": {
		"bin": "./bin",
		"lib": "./dist/lib",
		"doc": "./docs"
	},
	"files": [
		"dist"
	],
	"publishConfig": {
		"tag": "dev",
		"access": "public"
	},
	"husky": {
		"hooks": {
			"pre-commit": "NODE_ENV=production node ./node_modules/.bin/pre-commit-lint",
			"commit-msg": "commitlint -e $HUSKY_GIT_PARAMS && . ./node_modules/.bin/commit-msg-stamp-branch ${HUSKY_GIT_PARAMS}",
			"pre-push": ". ./node_modules/.bin/pre-push-check-stage && echo \"\n[ok] Pushing code...\""
		}
	},
	"scripts": {
		"prestart": "npm run build",
		"start": "concurrently \"npm run watch\" \"npm run serve\"",
		"ci": "npm test && npm run test:submit",
		"pretest": "npm run build",
		"test": "concurrently \"npm run test:lint\" \"npm run test:coverage\"",
		"test:lint": "concurrently \"npm run lint:js\" \"npm run lint:css\" && echo \"\n[ok] Linter complete.\n\"",
		"test:unit": "node ./node_modules/.bin/mocha \"./test/*.spec.js\" --reporter=mocha-better-spec-reporter --colors",
		"test:coverage": "nyc --reporter=lcov --reporter=text mocha \"./test/*.spec.js\" --recursive",
		"test:submit": "concurrently \"cat coverage/lcov.info | codacy-coverage\" \"cat coverage/lcov.info | coveralls\"",
		"test:ui": "npx shots",
		"prebuild": "rimraf dist",
		"build": "concurrently \"npm run rollup\" \"stak --config=.stakcssrc.js:all\"",
		"watch": "concurrently \"npm run build -- --watch\" \"npm run test:unit -- --watch\"",
		"serve": "browser-sync start --config ./.browsersyncrc.js",
		"lint:css": "node ./node_modules/.bin/stylelint src/**/*.css --format=stylish",
		"lint:js": "node ./node_modules/.bin/eslint ./src/**/*.js",
		"rollup": "rollup --config=.rolluprc.js",
		"semantic-release": "semantic-release"
	},
	"devDependencies": {
		"@brikcss/eslint-config": "0.1.4",
		"@brikcss/git-hooks": "1.2.0",
		"@brikcss/merge": "1.0.7",
		"@brikcss/shots": "0.0.9",
		"@brikcss/stakcss": "0.8.0",
		"@brikcss/stakcss-bundler-copy": "0.1.0",
		"@brikcss/stakcss-bundler-ejs": "0.0.1",
		"@brikcss/stakcss-bundler-postcss": "0.4.0",
		"@brikcss/stylelint-config-css": "0.1.4",
		"@commitlint/cli": "7.2.1",
		"autoprefixer": "9.3.1",
		"babel-core": "6.26.3",
		"babel-plugin-external-helpers": "6.22.0",
		"babel-preset-env": "1.7.0",
		"browser-sync": "2.26.3",
		"codacy-coverage": "3.2.0",
		"concurrently": "4.0.1",
		"coveralls": "3.0.2",
		"cross-env": "5.2.0",
		"eslint": "5.8.0",
		"mocha": "5.2.0",
		"mocha-better-spec-reporter": "3.1.0",
		"nyc": "13.1.0",
		"postcss": "7.0.5",
		"postcss-csso": "3.0.0",
		"postcss-reporter": "6.0.0",
		"prettier": "1.15.1",
		"rimraf": "2.6.2",
		"rollup": "0.67.0",
		"rollup-plugin-babel": "4.0.3",
		"rollup-plugin-commonjs": "9.2.0",
		"rollup-plugin-node-resolve": "3.4.0",
		"rollup-plugin-prettier": "0.4.0",
		"rollup-plugin-terser": "3.0.0",
		"semantic-release": "15.10.8",
		"stylelint": "9.7.1",
		"stylelint-formatter-pretty": "1.0.3"
	}
}
